.search {
  padding: 0 20rpx;
  height: 100%;
}

.search .search_form {
  padding: 30rpx 20rpx;
  position: relative;
}

.icon-sousuo {
  position: absolute;
  left: 0;
  top: 18rpx;
  margin: 0 16rpx;
  vertical-align: middle;
  color: #c9c9c9;
  font-size: 24rpx;
}

.inputcover {
  position: relative;
  height: 60rpx;
  padding: 0 60rpx;
  background: rgba(248, 248, 248);
  border-radius: 30px;
}

.search_all {
  width: 100%;
  height: 60rpx;
  line-height: 36rpx;
  background: transparent;
  font-size: 28rpx;
  color: #333;
}

.placeholder_class {
  font-size: 28rpx;
  color: #c9c9c9;
}

.bangdan {
  display: flex;
  flex-direction: column;
  margin-top: 20px;
}

.bsb {
  display: flex;
}

.bsb.bd_item:not(:first-child) {
  margin-top: 10rpx;
}

.left_type {
  position: relative;
}

.type_img {
  width: 200rpx;
  border-radius: 6px;
}

.type_intro {
  position: absolute;
  left: 16rpx;
  bottom: 16rpx;
  font-size: 24rpx;
  color: rgb(253, 254, 254);
}

.right_songs {
  display: flex;
  flex-direction: column;
  margin-left: 14px;
  justify-content: space-between;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
}

.song_intro {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
