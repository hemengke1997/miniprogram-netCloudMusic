.nav_title {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0 auto;
  max-width: 354rpx;
  font-size: 18px;
  color: #fff;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}

.title {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}

.nav_capsule {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  position: absolute;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 18px;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.1);
  padding: 7px 10px;
  z-index: 9;
}

.small_line {
  width: 0.5px;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.2);
}

.icon-zhuye, .icon-fanhui {
  font-size: 23px;
  /* transform: translateY(1px); */
}

.cap {
  display: flex;
  align-items: center;
  justify-content: center;
}
